<% book.book_comments.each do |book_comment| %>
  <tr>
    <td>
      <p><%= image_tag book_comment.user.get_profile_image, size:"50x50" %></p>
      <%= book_comment.user.name %>
    </td>
    <td>
      <%= book_comment.comment %>
    </td>
    <% if book_comment.user == current_user %>
      <td><%= link_to 'Destroy', book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, date: {"turbolinks" => false}, class: "btn btn-sm btn-danger"%></td>
    <% end %>
  </tr>
<% end %>